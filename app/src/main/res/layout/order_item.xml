<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:background="@drawable/rounded"
        android:backgroundTint="@color/white"
        android:elevation="8dp"
        android:orientation="vertical"
        android:padding="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="30dp"
                android:layout_height="30dp"
                app:srcCompat="@drawable/logo"
                app:tint="@color/violet" />

            <LinearLayout
                android:id="@+id/linearLayout0"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="end"
                android:orientation="horizontal"
                android:padding="5dp">

                <TextView
                    android:id="@+id/textViewDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/yandex_light"
                    android:paddingEnd="20dp"
                    android:text="00.00.0000"
                    android:textColor="@color/black"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/textViewTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/yandex_light"
                    android:text="9:00-12:00"
                    android:textColor="@color/black"
                    android:textSize="18sp" />


            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="5dp">

            <HorizontalScrollView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/textViewNames"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/yandex"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:text="Названия букетов"
                    android:textColor="@color/black"
                    android:textSize="20sp" />
            </HorizontalScrollView>

            <ScrollView
                android:id="@+id/addressItem"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <HorizontalScrollView
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingBottom="5dp">

                        <TextView
                            android:id="@+id/t1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="г. " />

                        <TextView
                            android:id="@+id/adressCity1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Город" />

                        <TextView
                            android:id="@+id/t2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=", ул. " />

                        <TextView
                            android:id="@+id/adressStreet1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Улица" />

                        <TextView
                            android:id="@+id/t3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=", д. " />

                        <TextView
                            android:id="@+id/adressHouseNumber1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="12" />

                        <TextView
                            android:id="@+id/adressHouseCourpose1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="/1" />

                        <TextView
                            android:id="@+id/t4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=", п. " />

                        <TextView
                            android:id="@+id/adressHousePod1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="6" />

                        <TextView
                            android:id="@+id/t6"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=", этаж " />

                        <TextView
                            android:id="@+id/adressHouseFloor1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="6" />

                        <TextView
                            android:id="@+id/t5"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=", кв. " />

                        <TextView
                            android:id="@+id/adressHouseApart1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="26" />
                    </LinearLayout>
                </HorizontalScrollView>
            </ScrollView>


        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="end"
            android:orientation="horizontal"
            android:padding="5dp">

            <TextView
                android:id="@+id/textViewCost1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/yandex"
                android:paddingEnd="5dp"
                android:text="0"
                android:textColor="@color/violet"
                android:textSize="24sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/yandex"
                android:text="₽"
                android:textColor="@color/violet"
                android:textSize="24sp" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>