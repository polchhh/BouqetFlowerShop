<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="320dp"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="center">
    
    <androidx.cardview.widget.CardView
        android:layout_margin="20dp"
        android:id="@+id/card"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        app:cardCornerRadius="20dp"
        app:cardElevation="8dp"
        android:background="@color/white">
        <LinearLayout
            android:padding="20dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:fontFamily="@font/yandex"
                android:text="Адрес доставки"
                android:textSize="24sp"
                android:paddingBottom="10dp"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/yandex"
                    android:text="Город: " />
                <EditText
                    android:fontFamily="@font/yandex_light"
                    android:backgroundTint="@color/gray"
                    android:id="@+id/editTextCity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ems="10" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/yandex"
                    android:text="Улица: " />
                <EditText
                    android:fontFamily="@font/yandex_light"
                    android:backgroundTint="@color/gray"
                    android:id="@+id/editTextStreet"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ems="10" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/yandex"
                    android:text="Дом: " />
                <EditText
                    android:fontFamily="@font/yandex_light"
                    android:backgroundTint="@color/gray"
                    android:id="@+id/editTextNumberHouse"
                    android:inputType="number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ems="10" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/yandex"
                    android:text="Корпус: " />
                <EditText
                    android:fontFamily="@font/yandex_light"
                    android:backgroundTint="@color/gray"
                    android:id="@+id/editTextCoorpuseHouse"
                    android:inputType="number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ems="10" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/yandex"
                    android:text="Квартира: " />
                <EditText
                    android:fontFamily="@font/yandex_light"
                    android:backgroundTint="@color/gray"
                    android:id="@+id/editTextHouseApart"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ems="10" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/yandex"
                    android:text="Подъезд: " />
                <EditText
                    android:fontFamily="@font/yandex_light"
                    android:backgroundTint="@color/gray"
                    android:id="@+id/editTextHousePod"
                    android:inputType="number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ems="10" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/yandex"
                    android:text="Этаж: " />
                <EditText
                    android:fontFamily="@font/yandex_light"
                    android:backgroundTint="@color/gray"
                    android:id="@+id/editTextHouseFloor"
                    android:inputType="number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ems="10" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="horizontal">
                <Button
                    android:textAllCaps="false"
                    android:elevation="0dp"
                    android:layout_margin="10dp"
                    android:id="@+id/btn_yes"
                    android:layout_width="100dp"
                    android:layout_height="30dp"
                    android:background="@drawable/rounded"
                    android:backgroundTint="@color/blue"
                    android:clickable="true"
                    android:text="Готово"
                    android:fontFamily="@font/yandex_light" />
                <Button
                    android:textAllCaps="false"
                    android:elevation="0dp"
                    android:layout_margin="10dp"
                    android:id="@+id/btn_no"
                    android:layout_width="100dp"
                    android:layout_height="30dp"
                    android:background="@drawable/rounded"
                    android:clickable="true"
                    android:text="Отмена"
                    android:fontFamily="@font/yandex_light" />
            </LinearLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>